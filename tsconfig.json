{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "ts-dist",
    "removeComments": true
  },
  "include": [
    "src/**/*"
  ],

}